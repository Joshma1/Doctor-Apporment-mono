{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
     "paths": {
        "@components/*": ["apps/frontend/components/*"],
  "@/*": ["apps/frontend/*"],
  "@/components/*": ["apps/frontend/components/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}